{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],

//    "baseUrl": ".", // this must be specified if "paths" is specified.
//    "paths": {
//      "@jest/*": ["node_modules/@jest"], // this mapping is relative to "baseUrl"
//    },
    "outDir": "dist/tsoutput",
    "allowJs": false,
    //"sourceMap": true,
    "inlineSourceMap": true,
    "strict": true ,
    "esModuleInterop": true,
    "incremental": true,
    "rootDirs": ["src",
      "app"
    ]
  },
  "include": ["src/**/*.ts",
    "app/*.ts",
    "jest/*.ts"
  ]
}